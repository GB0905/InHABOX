package set;

import javax.swing.ImageIcon;

public class Movie {
	ImageIcon poster; 	// 포스터
	String name;		// 제목
	int num;			// 영화 번호
	int[] runId;		// 상영 번호
	int[] room;			// 영화 상영관
	String[] date;		// 영화 날짜
	String[] time;		// 영화 시간
	String[] seat;		// 영화 좌석
	
	public void setMovieInfo(int Num) {
		runId = new int[Num];
		date = new String[Num];
		time = new String[Num];
		room = new int[Num];
//		seat = new String[Num];
	}
	
	
	// 영화 이름, 번호, 포스터
	public Movie(String movNum, String movName) {
		this.name = movName;
		this.num = Integer.parseInt(movNum);
		this.poster = new ImageIcon("images/poster" + "/" + movName + ".jpg");
	}
	public String getName() {
		return name;
	}
	public int getMovNum() {
		return num;
	}
	public ImageIcon getPoster() {
		return poster;
	}
	
	// 영화 상영관
	public int[] getRoom() {
		return room;
	}
	public int getRoom(int i) {
		return room[i];
	}
	public void setRoom(int i, int movRoom) {
		this.room[i] = movRoom;
	}
	
	// 상영 번호
	public int[] getRunId() {
		return runId;
	}
	public int getRunId(int i) {
		return runId[i];
	}
	public void setRunId(int i, int runId) {
		this.runId[i] = runId;
	}
	
	// 영화 날짜
	public String[] getDate() {
		return date;
	}
	public String getDate(int i) {
		return date[i];
	}
	public void setDate(int i, String date) {
		this.date[i] = date;
	}
	
	// 영화 시간
	public void setTime(int i, String movTime) {
		this.time[i] = movTime;
	}
	public String[] getTime() {
		return time;
	}
	public String getTime(int i) {
		return time[i];
	}

	// 영화 좌석
	public String[] getSeat() {
		return seat;
	}
	public void setSeat(int i, String movSeat) {
		this.seat[i] = movSeat;
	}
}
