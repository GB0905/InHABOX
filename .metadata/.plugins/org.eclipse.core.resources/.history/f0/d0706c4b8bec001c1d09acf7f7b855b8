			int qut_data = JOptionPane.showConfirmDialog(null, "출력 중 입니다.", "완료", JOptionPane.DEFAULT_OPTION);
			if (qut_data == JOptionPane.YES_OPTION) {
				fs = main.getFrameSet();

				fs.c.remove(fs.mainPanel);

				MainPanel a = new MainPanel(fs);
				fs.mainPanel = a;
				fs.c.add(fs.mainPanel);

				fs.setVisible(true);

				fs.revalidate();
			}
