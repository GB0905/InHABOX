//						+ "VALUES (" 
//						+ selMovie.getSelRunId() + ", "
//						+ selMovie.getSelTime() + ", "
//						+ "선택한 좌석," + ", "
//						+ totalPrice + ", "
//						+ "결제방식,"
//						+ "4, "
//						+ "'성인:1 청소년:1', "
//						+ "예약한좌석 슈퍼키)";
//				
